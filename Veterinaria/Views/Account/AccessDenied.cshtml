@{
    ViewData["Title"] = "Acceso Denegado";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="container text-center my-5 fade-in">
    <div class="card shadow-lg p-5 mx-auto" style="max-width: 500px;">
        <h1 class="text-danger mb-3">
            <i class="fas fa-ban me-2"></i> Acceso denegado
        </h1>
        <p class="text-muted fs-5 mb-4">
            No tenés permiso para acceder a esta sección del sistema.
        </p>

        @if (!string.IsNullOrEmpty(returnUrl))
        {
            <p class="small text-muted">Intentaste acceder a: <code>@returnUrl</code></p>
        }

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3 px-4 py-2">
            <i class="fas fa-home me-2"></i> Volver al inicio
        </a>
    </div>
</div>

