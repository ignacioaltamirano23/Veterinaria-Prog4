@model LogicaDeNegocio.Models.Mascota

@{
    ViewData["Title"] = "Crear Mascota";
}

<h1 class="fw-bold text-dark mb-4">Crear Mascota</h1>

<div class="row justify-content-md-start justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm colorful-form-card">
            <div class="card-header colorful-form-header">
                <h5 class="card-title mb-0 text-white">
                    <i class="fas fa-paw me-2"></i>Nueva Mascota
                </h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Nombre" class="form-label fw-semibold"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Especie" class="form-label fw-semibold"></label>
                        <input asp-for="Especie" class="form-control" />
                        <span asp-validation-for="Especie" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Raza" class="form-label fw-semibold"></label>
                        <input asp-for="Raza" class="form-control" />
                        <span asp-validation-for="Raza" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="FechaNacimiento" class="form-label fw-semibold"></label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ClienteId" class="form-label fw-semibold"></label>
                        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                            <option value="" class="text-center">--- Seleccione un cliente ---</option>
                        </select>
                        <span asp-validation-for="ClienteId" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary colorful-btn-hover w-100 py-2">
                            <i class="fas fa-save me-2"></i>Crear Mascota
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer colorful-form-footer">
                <a asp-action="Index" class="btn btn-secondary colorful-btn-hover">
                    <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
