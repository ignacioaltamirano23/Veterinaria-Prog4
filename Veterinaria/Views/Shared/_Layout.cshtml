<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vet</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VetTest.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-paw me-2"></i>Vet
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-users-cog me-1"></i>Administración
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">
                                                <i class="fas fa-users me-2"></i>Gestión de Usuarios
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Mascotas" asp-action="Index">
                                                <i class="fas fa-paw me-2"></i>Gestión de Mascotas
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Turnos" asp-action="Index">
                                                <i class="fas fa-calendar-alt me-2"></i>Gestión de Turnos
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Veterinario"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-stethoscope me-1"></i>Veterinario
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Turnos" asp-action="Index">
                                                <i class="fas fa-calendar-check me-2"></i>Mi Agenda
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Mascotas" asp-action="Index">
                                                <i class="fas fa-paw me-2"></i>Mascotas
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Cliente"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user me-1"></i>Mi Cuenta
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Clientes" asp-action="MisMascotas">
                                                <i class="fas fa-paw me-2"></i>Mis Mascotas
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Clientes" asp-action="MisTurnos">
                                                <i class="fas fa-calendar me-2"></i>Mis Turnos
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var rolUsuario = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
                            var imagenUsuario = User.FindFirst("picture")?.Value;

                            var badgeClass = rolUsuario switch
                            {
                                "Administrador" => "bg-danger",
                                "Veterinario" => "bg-warning",
                                "Cliente" => "bg-info",
                                _ => "bg-secondary"
                            };

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    @if (!string.IsNullOrEmpty(imagenUsuario))
                                    {
                                        <img src="@imagenUsuario" alt="Perfil" class="rounded-circle me-2" style="width:30px;height:30px;object-fit:cover;">
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle me-1"></i>
                                    }
                                    @User.Identity.Name
                                    <span class="badge @badgeClass ms-1 p-2">@rolUsuario</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">           
                                    <li>
                                        <a class="dropdown-item" asp-controller="Login" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }                        
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - Vet - <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Política de Privacidad</a>
                </div>
                <div class="col-md-6 text-md-end">
                    <span class="text-muted">
                        <i class="fas fa-heart text-danger"></i> Cuidando a tus mascotas
                    </span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.5.0/chart.min.js"
            integrity="sha512-n/G+dROKbKL3GVngGWmWfwK0yPctjZQM752diVYnXZtD/48agpUKLIn0xDQL9ydZ91x6BiOmTIFwWjjFi2kEFg=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
