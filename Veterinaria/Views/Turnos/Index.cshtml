@model IEnumerable<LogicaDeNegocio.Models.Turno>

@{
    ViewData["Title"] = "Index";
}

<h1>Turnos</h1>

<p>
    <a asp-action="Create">Crear Turno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FechaHora)</th>
            <th>@Html.DisplayNameFor(model => model.EstadoTurno)</th>
            <th class="text-start">@Html.DisplayNameFor(model => model.Mascota)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FechaHora</td>
                <td>@item.EstadoTurno</td>
                <td>@($"{item.Mascota.Nombre} ({item.Mascota.Raza})")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
