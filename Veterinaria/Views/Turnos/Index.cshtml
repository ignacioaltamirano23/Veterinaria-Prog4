

@using LogicaDeNegocio.Models
@model IEnumerable<LogicaDeNegocio.Models.Turno>

@{
    ViewData["Title"] = "Gestión de Turnos";
    var esVeterinario = User.IsInRole("Veterinario");
    var esAdministrador = User.IsInRole("Administrador");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5 fw-bold">
        <i class="fas fa-calendar-alt me-3 icono-gradient"></i>
        @ViewData["Title"]
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nuevo Turno
    </a>
</div>

<div class="card colorful-table-card shadow-sm">
    <div class="card-header colorful-form-header text-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>                
                @(esVeterinario ? "Mis Turnos Programados" : "Lista de Turnos")
            </h5>
            <span class="badge bg-light text-dark">@Model.Count() turnos</span>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive p-3">
            <table class="table table-hover table-striped mb-0" id="tablaTurnos">
                <thead class="table-light">
                    <tr>
                        <th><i class="fas fa-calendar me-1"></i>Fecha y Hora</th>
                        <th><i class="fas fa-paw me-1"></i>Mascota</th>
                        <th><i class="fas fa-user me-1"></i>Dueño</th>
                        @if (esAdministrador)
                        {
                            <th><i class="fas fa-user-md me-1"></i>Veterinario</th>
                        }                        
                        <th><i class="fas fa-tag me-1"></i>Estado</th>
                        <th class="text-center"><i class="fas fa-cogs me-1"></i>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var turno in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <strong>@turno.FechaHora.ToString("dd/MM/yyyy")</strong>
                                <br>
                                <small class="text-muted">@turno.FechaHora.ToString("HH:mm") hs</small>
                            </td>

                            <td class="align-middle">
                                <div class="d-flex align-items-center">
                                    <div class="ms-0 rounded-circle d-flex me-3 colorful-icon-background" style="width: 40px; height: 40px;">
                                        <i class="fas fa-paw text-white"></i>
                                    </div>
                                    <div>
                                        <strong>@turno.Mascota.Nombre</strong>
                                        <br>
                                        <small class="text-muted">@turno.Mascota.Especie</small>
                                    </div>
                                </div>
                            </td>

                            <td class="align-middle">
                                <small>@turno.Mascota.Cliente.Usuario.Nombre</small>
                                <br>
                                <small class="text-muted">@turno.Mascota.Cliente.Usuario.Email</small>
                            </td>
                            @if (esAdministrador)
                            {
                                <td class="align-middle">
                                    <small>@turno.Veterinario?.Usuario.Nombre</small>
                                </td>
                            }                            

                            <td class="align-middle">
                                @{
                                    var badgeClass = turno.EstadoTurno switch
                                    {
                                        EstadoTurno.Confirmado => "bg-success",
                                        EstadoTurno.Pendiente => "bg-warning",
                                        EstadoTurno.Cancelado => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@turno.EstadoTurno</span>
                            </td>

                            <td class="align-middle">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@turno.Id"
                                       class="btn btn-outline-info btn-sm"
                                       data-bs-toggle="tooltip"
                                       title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@turno.Id"
                                       class="btn btn-outline-warning btn-sm"
                                       data-bs-toggle="tooltip"
                                       title="Editar turno">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    @if (esAdministrador)
                                    {
                                        <a asp-action="Delete" asp-route-id="@turno.Id"
                                           class="btn btn-outline-danger btn-sm"
                                           data-bs-toggle="tooltip"
                                           title="Eliminar turno">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                    
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card-body text-center d-flex justify-content-center align-items-center py-5">
            <div class="colorful-empty-card border-0">
                <div class="colorful-icon-background m-auto mb-3">
                    <i class="fas fa-calendar-times text-white fa-2x"></i>
                </div>

                @if (esVeterinario)
                {
                    <h4 class="text-muted mb-3">No tenés turnos programados</h4>
                    <p class="text-muted mb-4">Todavía no programaste ningún turno en tu agenda.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Programar Mi Primer Turno
                    </a>
                }
                else
                {
                    <h4 class="text-muted mb-3">No hay turnos programados en el sistema</h4>
                    <p class="text-muted mb-4">Comenzá programando el primer turno.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Programar Primer Turno
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var mensajeExito = '@TempData["MensajeExito"]';

            $('#tablaTurnos').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                responsive: true,
                order: [[0, 'desc']], 
                pageLength: 10,                
            });

            if (mensajeExito)
            {
                    Swal.fire({
                    title: '¡Éxito!',
                    text: mensajeExito,
                    icon: 'success',
                    confirmButtonColor: '#9d4edd',
                    timer: 3000,
                    timerProgressBar: true
                });
            }      

            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
            });
    });
    </script>                
}

