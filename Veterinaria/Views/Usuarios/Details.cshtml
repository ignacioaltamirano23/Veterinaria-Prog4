@using LogicaDeNegocio.Models
@model Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="d-flex align-items-center mb-4">
    <h1 class="display-5 fw-bold">
        <i class="fas fa-user me-3 icono-gradient"></i>
        @ViewData["Title"]
    </h1>  
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header colorful-form-header text-white py-3">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información del Usuario</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <div class="form-control bg-light">@Model.Email</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Nombre</label>
                        <div class="form-control bg-light">@Model.Nombre</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Teléfono</label>
                        <div class="form-control bg-light">
                            @if (string.IsNullOrEmpty(Model.Telefono) || Model.Telefono == "N/A")
                            {
                                <span class="text-muted">No asignado</span>
                            }
                            else
                            {
                                @Model.Telefono
                            }
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Dirección</label>
                        <div class="form-control bg-light">
                            @if (string.IsNullOrEmpty(Model.Direccion) || Model.Direccion == "N/A")
                            {
                                <span class="text-muted">No asignada</span>
                            }
                            else
                            {
                                @Model.Direccion
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Rol</label>
                        <div>
                            @{
                                var badgeClass = Model.Rol.Nombre switch
                                {
                                    "Administrador" => "bg-danger",
                                    "Veterinario" => "bg-warning",
                                    "Cliente" => "bg-info",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass fs-6">@Model.Rol.Nombre</span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</div>

@section Scripts {
   
}